<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pergunta2Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="De qual filme Ã© a imagem abaixo?" />

    <ImageView
        android:id="@+id/imageViewJohn"
        android:layout_height="250dp"
        android:layout_width="match_parent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/johntravolta" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <RadioButton
            android:id="@+id/radioButtonCorreto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulp Fiction" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matrix" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Era uma vez no oeste" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonResponderP2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Responder"
        android:layout_margin="5dp" />

</LinearLayout>